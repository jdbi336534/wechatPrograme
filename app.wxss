/**app.wxss**/

page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  width:100%;
  height:auto;
  background-color: #f4f4f4;
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
  box-sizing: border-box;
}

view,
image,
text,
navigator {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

view,
text {
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
  font-size: 29rpx;
  color: #333;
}